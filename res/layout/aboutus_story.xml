<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/event1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgholder1"
        android:layout_width="140dp"
        android:layout_height="320dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:rotation="-15"
        android:src="@drawable/finalframephoto" />

    <ImageView
        android:id="@+id/imageofholder1"
        android:layout_width="120dp"
        android:layout_height="125dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="105dp"
        android:rotation="-15"
        android:src="@drawable/bride"
        
         />

    <ProgressBar
        android:id="@+id/loadingimg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="125dp"
        android:rotation="-15"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textof1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="225dp"
        android:rotation="-15"
        android:text="Bride"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgholder2"
        android:layout_width="140dp"
        android:layout_height="320dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="20dp"
        android:rotation="16"
        android:src="@drawable/finalframephoto" />

    <ImageView
        android:id="@+id/imageofholder2"
        android:layout_width="120dp"
        android:layout_height="125dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="105dp"
        android:rotation="16"
        android:src="@drawable/groom"
         />

    <ProgressBar
        android:id="@+id/loadingimg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="119dp"
        android:rotation="16"
        android:visibility="visible" />
    
     <TextView
        android:id="@+id/textof2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="225dp"
        android:rotation="16"
        android:text="Groom"
        android:textSize="20dp" />
     
     
      <ImageView
        android:id="@+id/imgholder3"
        android:layout_width="140dp"
        android:layout_height="320dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="160dp"
        
        android:src="@drawable/finalframephoto" />
      
      
       <ImageView
        android:id="@+id/imageofholder3"
       android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/icc"
         />
       
       
        <TextView
        android:id="@+id/textof3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="370dp"
        
        android:text="Our Story"
        android:textSize="20dp" />
    
    

</FrameLayout>